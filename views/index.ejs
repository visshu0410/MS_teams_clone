<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>VideoAll</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <!-- Vendor CSS Files -->
<link href="https://cdn.rawgit.com/michalsnik/aos/2.1.1/dist/aos.css" rel="stylesheet">
<link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet"> 
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="/css/styles_index.css" rel="stylesheet">

</head>

<body>


  <!-- ======= Header ======= -->
  <header id="header" class="d-flex align-items-center">
    <div class="container d-flex align-items-center justify-content-between">

      <h1 class="logo"><a href="/">VideoAll<span>.</span></a></h1>

      <nav id="navbar" class="navbar">
        <ul>
          <li><a class="nav-link scrollto" href="/my-rooms">View Previous Rooms</a></li>
          <% if(!flag){%> 
          <li><a class="nav-link scrollto " href="/login">Login</a></li>
          <li><a class="nav-link scrollto" href="/register">SignUp</a></li>
          <% } else{%> 
           
          <li class="dropdown"><a href="#"><span><i class="bi bi-person-circle"></i>  </span> <span><%=username%></span> <i class="bi bi-chevron-down"></i></a>
            <ul>
              <li><a href="/logout">LogOut</a></li>
            </ul>
          </li>
          <% } %> 
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav><!-- .navbar -->

    </div>
  </header><!-- End Header -->

  <!-- ======= Hero Section ======= -->
  <section id="hero" class="d-flex align-items-center">
    <div class="container" data-aos="zoom-out" data-aos-delay="100">
      <h1>Welcome to <span>VideoAll</span></h1>
      <h2>Re-connect with everyone....Virtually<3</h2>
      <div class="d-flex">
      
            <div class="row justify-content-center" >
              <div class="col-lg-12">
                <h4>Create a room in a snap!</h4>
                  <form action="/new-room" method="POST">
                    <input type="text" placeholder="Enter a title for the meeting" maxlength="45" size="45" autocomplete="off" name="name" required>
                     <button btn-get-started style="border: 0ch; background-color: #106eea ; color: white;" scrollto>Create the Room</button>
                </form>
              </div>
        
          </div>
        <!-- <a href="/<%=id%>" class="btn-watch-video"><i class="bi bi-camera-video"></i><span>Start an instant meet</span></a> -->
      </div>
    </div>
  </section><!-- End Hero -->


  <!-- ======= Footer ======= -->
  <footer id="footer">
    <div class="container py-4">
      <div class="copyright">
        &copy; Copyright <strong><span>VideoAll</span></strong>. All Rights Reserved
      </div>
    </div>
  </footer><!-- End Footer -->
  <div id="preloader"></div>
  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="https://cdn.rawgit.com/michalsnik/aos/2.1.1/dist/aos.js"></script>
  <script src="bootstrap/js/bootstrap.bundle.min.js"></script>
  <!-- Template Main JS File -->
  <script src="/js/script_index.js"></script>

</body>

</html>